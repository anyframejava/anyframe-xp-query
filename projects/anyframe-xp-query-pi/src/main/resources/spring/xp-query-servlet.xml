<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

	<bean name="/xpController.do" class="org.anyframe.xp.query.web.XPController"/>

	<bean name="/xpQueryLogin.do" class="org.anyframe.plugin.xp.query.security.web.LoginController"/>
	
	<bean name="/xpQueryMovie.do" class="org.anyframe.plugin.xp.query.moviefinder.web.MovieController"/>
	
	<bean name="/xpQueryUpload.do" class="org.anyframe.plugin.xp.query.attach.web.UploadController" />
	
	<bean name="/xpQueryDownload.do" class="org.anyframe.plugin.xp.query.attach.web.DownloadController" />

	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize">
			<value>10000000</value>
		</property>
	</bean>
	
	<bean
		class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter">
	</bean>
</beans>
