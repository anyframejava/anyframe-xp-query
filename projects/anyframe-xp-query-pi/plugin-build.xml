<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="xp-query"
	description="XP-Query Plugin consists of sample code that provides basic guidelines on how to use XPlatform connection modules and common server modules provided by Anyframe, and reference libraries needed to use open sources.">
	<groupId>org.anyframe.plugin</groupId>
	<artifactId>anyframe-xp-query-pi</artifactId>
	<version>1.0.3</version>
	<dependent-plugins>
		<dependent-plugin name="query-ria" version="2.0.0&gt;*" />
	</dependent-plugins>
	<resources>
		<resource dir="src/main/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/main/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/test/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/test/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/main/webapp/xp-query" filtered="false"
			packaged="false">
			<exclude name="**/default_typedef.xml" />
		</resource>
		<resource dir="src/main/webapp/xp-query" filtered="true"
			packaged="false">
			<include name="**/default_typedef.xml" />
		</resource>
		<resource dir="db" filtered="false" packaged="false">
			<include name="**/*.sql" />
		</resource>
	</resources>
	<build>
		<filesets>
			<fileset dir="src/main/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/xp/query/**/*.java" />
			</fileset>
			<fileset dir="src/main/resources" filtered="true" packaged="false">
				<include name="**/*xp-query*.xml" />
				<include name="**/xp-query/**/*.xml" />
				<include name="**/*License.xml" />
			</fileset>
			<fileset dir="src/test/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/xp/query/**/*.java" />
			</fileset>
			<fileset dir="src/test/resources" filtered="true" packaged="false">
				<include name="**/*xp-query*.xml" />
			</fileset>
			<fileset dir="src/main/webapp" filtered="false" packaged="false">
				<include name="**/xp-query/**/*.*" />
				<include name="**/anyframe.jsp" />
				<exclude name="**/default_typedef.xml" />
			</fileset>
			<fileset dir="src/main/webapp/xp-query" filtered="true"
				packaged="false">
				<include name="**/default_typedef.xml" />
			</fileset>
			<fileset dir="db" filtered="false" packaged="false">
				<include name="**/scripts/*.sql" />
			</fileset>
			<fileset dir="db" filtered="false" packaged="false">
				<include name="**/resources/**/*.xml" />
			</fileset>			
		</filesets>
	</build>
	<interceptor>
		<class></class>
	</interceptor>
	<samples>true</samples>
	<essential>false</essential>
	<checked>false</checked>
</plugin>